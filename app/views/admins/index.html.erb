<head>
	<meta content="text/html" charset="UTF-8" http-equiv="Content-Type">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>加盟店リスト | チャット</title>
	<link href="https://fonts.googleapis.com/css?family=Noto+Serif+JP&display=swap" rel="stylesheet">
	<%= stylesheet_link_tag "/assets/josh/app" %>
	<%= stylesheet_link_tag "/assets/josh/pages/tables" %>
</head>

<body class="skin-josh">
<header class="header">
	<a href="index.html" class="logo">
		<%= image_tag("/assets/josh/logo.png") %>
	</a>
	<nav class="navbar navbar-static-top" role="navigation">
		<div>
			<a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
				<div class="responsive_nav"></div>
			</a>
		</div>
		<div class="navbar-right">
			<ul class="nav navbar-nav">
				<li class="dropdown user user-menu">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<%= image_tag '/assets/josh/authors/avatar3.jpg', class: 'img-circle img-responsive pull-left', alt: 'riot', width: 35, height: 35 %>
						<div class="riot">
							<div>
								Riot
								<span>
                                    <i class="caret"></i>
                                </span>
							</div>
						</div>
					</a>
					<ul class="dropdown-menu">
						<li class="user-header bg-light-blue">
							<%= image_tag '/assets/josh/authors/avatar3.jpg', class: 'img-circle img-responsive', width: 90, height: 90, alt: 'User Image' %>
							<p class="topprofiletext">Riot Zeast</p>
						</li>
						<li>
							<a href="view_user.html"> <i class="livicon" data-name="user" data-s="18"></i> My Profile </a>
						</li>
						<li role="presentation"></li>
						<li>
							<a href="adduser.html"> <i class="livicon" data-name="gears" data-s="18"></i> Account Settings </a>
						</li>
						<li class="user-footer">
							<div class="pull-left">
								<a href="lockscreen.html"> <i class="livicon" data-name="lock" data-s="18"></i> Lock </a>
							</div>
							<div class="pull-right">
								<a href="login.html"> <i class="livicon" data-name="sign-out" data-s="18"></i> Logout </a>
							</div>
						</li>
					</ul>
				</li>
			</ul>
		</div>
	</nav>
</header>
<div class="wrapper row-offcanvas row-offcanvas-left">
	<aside class="left-side sidebar-offcanvas">
		<section class="sidebar ">
			<div class="page-sidebar  sidebar-nav">
				<ul class="page-sidebar-menu" id="menu">
					<li>
						<a href="/">
							<i class="livicon" data-name="home" data-size="18" data-c="#418BCA" data-hc="#418BCA" data-loop="true"></i>
							<span class="title">ダッシュボード</span>
						</a>
					</li>
					<li class="active">
						<a href="#">
							<i class="livicon" data-name="users" data-size="18" data-c="#00bc8c" data-hc="#00bc8c" data-loop="true"></i>
							<span class="title">加盟店</span>
							<span class="fa arrow"></span>
						</a>
						<ul class="sub-menu">
							<li class="active">
								<a href="/admins"><i class="fa fa-angle-double-right"></i> 加盟店リスト</a>
							</li>
							<li>
								<a href="/admins/new"><i class="fa fa-angle-double-right"></i> 加盟店登録</a>
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</section>
	</aside>
	<aside class="right-side">
		<section class="content-header">
			<h1>加盟店リスト</h1>
		</section>
		<section class="content" style="padding: 15px;">
			<div style="text-align: right;">
				<%= link_to "タグを見る", htmltag_stores_path, class: "btn btn-primary" %>
			</div>
			<div class="table-scrollable">
				<table class="table table-hover">
					<thead>
					<tr>
						<th>加盟店番号</th>
						<th>加盟店ID</th>
						<th>名前</th>
						<th>決済件</th>
						<th>アクション</th>
					</tr>
					</thead>
					<tbody>
					<% @stores.each_with_index do |store, i| %>
					<tr>
						<td><%= store.id %></td>
						<td><%= store.auth_id %></td>
						<td><%= store.name %></td>
						<td><%= store.get_pays %>件</td>
						<td>
							<%= link_to "見る", admin_path(id: store.id), class: "btn btn-success btn-sm" %>
							<%= link_to "削除", admin_path(id: store.id), method: :delete, data: {confirm: "削除する"}, class: "btn btn-danger btn-sm" %>
						</td>
					</tr>
					<% end %>
					</tbody>
				</table>
			</div>
			<div style="text-align: right;">
				<%= link_to '加盟店登録', new_admin_path, class: "btn btn-success" %>
			</div>
		</section>
	</aside>
</div>
<a id="back-to-top" href="#" class="btn btn-primary btn-lg back-to-top" role="button" title="Return to top" data-toggle="tooltip" data-placement="left">
	<i class="livicon" data-name="plane-up" data-size="18" data-loop="true" data-c="#fff" data-hc="white"></i>
</a>
<%= javascript_include_tag "/assets/josh/app" %>
</body>
