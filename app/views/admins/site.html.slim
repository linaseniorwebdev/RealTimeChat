header.header
	nav.navbar.navbar-static-top role="navigation"
		div
			a.navbar-btn.sidebar-toggle data-toggle="offcanvas" href="#" role="button"
				.responsive_nav
.wrapper.row-offcanvas.row-offcanvas-left
	aside.left-side.sidebar-offcanvas
		section.sidebar
			.page-sidebar.sidebar-nav
				ul#menu.page-sidebar-menu
					li.active
						a href="#"
							i.livicon data-c="#00bc8c" data-hc="#00bc8c" data-loop="true" data-name="users" data-size="18"
							span.title 加盟店
							span.fa.arrow
						ul.sub-menu
							li
								a href="/admins"
									i.fa.fa-angle-double-right
									| 加盟店リスト
							li
								a href="/admins/new"
									i.fa.fa-angle-double-right
									| 加盟店登録
	aside.right-side
		section.content-header
			h1 サイト情報
			ol.breadcrumb
				li
					= link_to 'ホーム', admins_path
				li
					= link_to '加盟店', admins_path
				li
					= link_to '加盟店情報', admin_path(@site.store)
				li.active サイト情報
		section.content.padding-15
			article.text-right(style="margin-bottom: 15px;")
				= link_to '戻る', admin_path(@site.store), class: 'btn btn-primary'
			.panel.panel-primary
				.panel-heading
					h4.panel-title サイト情報
					span.pull-right
						i.glyphicon.glyphicon-chevron-up.clickable
				.panel-body
					table.table.table-hover
						thead
							tr
								th NO
								th メッセージ件
								th 決済件
								th アクション
						tbody
							- @site.chat_rooms.each_with_index do |room, i|
								tr
									td = i + 1
									td = room.messages.count
									td = room.get_pays
									td
										= link_to "チャットルームへ", chatroom_admin_path(@site.store, chat_room_id: room.id), class: "btn btn-sm btn-success"
a#back-to-top.btn.btn-primary.btn-lg.back-to-top data-placement="left" data-toggle="tooltip" href="#" role="button" title=("Return to top")
	i.livicon data-c="#fff" data-hc="white" data-loop="true" data-name="plane-up" data-size="18"