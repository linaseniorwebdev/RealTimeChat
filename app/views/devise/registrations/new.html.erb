<head>
	<meta content="text/html" charset="UTF-8" http-equiv="Content-Type">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>サインアップ | チャット</title>
	<link href="https://fonts.googleapis.com/css?family=Noto+Serif+JP&display=swap" rel="stylesheet">
	<%= stylesheet_link_tag "/assets/josh/bootstrap.min" %>
	<%= stylesheet_link_tag "/assets/josh/pages/login" %>
</head>

<body>
<div class="container">
	<div class="row vertical-offset-100">
		<div class="col-sm-6 col-sm-offset-3  col-md-5 col-md-offset-4 col-lg-4 col-lg-offset-4">
			<div id="container_demo">
				<div id="wrapper">
					<div id="register" class="animate form">
						<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<%= render "devise/shared/error_messages", resource: resource %>
							<h3 class="black_bg">
							<%= image_tag("/assets/josh/logo.png") %>
							<br>Sign Up</h3>
							<div class="form-group">
								<label style="margin-bottom:0;" for="email" class="youmail">
									<i class="livicon" data-name="mail" data-size="16" data-loop="true" data-c="#3c8dbc" data-hc="#3c8dbc"></i> E-mail
								</label>
								<input autofocus="autofocus" autocomplete="email" type="email" value="" name="admin_user[email]" id="admin_user_email" required>
							</div>
							<div class="form-group">
								<label style="margin-bottom:0;" for="password" class="youpasswd">
									<i class="livicon" data-name="key" data-size="16" data-loop="true" data-c="#3c8dbc" data-hc="#3c8dbc"></i> Password
								</label>
								<input autocomplete="new-password" type="password" name="admin_user[password]" id="admin_user_password" required>
							</div>
							<div class="form-group">
								<label style="margin-bottom:0;" for="password_confirm" class="youpasswd">
									<i class="livicon" data-name="key" data-size="16" data-loop="true" data-c="#3c8dbc" data-hc="#3c8dbc"></i> Confirm Password
								</label>
								<input autocomplete="new-password" type="password" name="admin_user[password_confirmation]" id="admin_user_password_confirmation" required>
							</div>
							<p class="signin button">
								<input type="submit" class="btn btn-success" name="commit" value="Sign up" data-disable-with="Sign up" />
							</p>
							<p class="change_link">
								<a href="/admin_users/sign_in" class="btn btn-responsive botton-alignment btn-warning btn-sm to_register">Log in</a>
							</p>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<%= javascript_include_tag "/assets/josh/app" %>
</body>